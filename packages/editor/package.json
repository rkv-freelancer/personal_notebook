    "@tiptap/extension-bubble-menu": "^2.1.13",
    "@tiptap/extension-floating-menu": "^2.1.13",
    "@tiptap/extension-image": "^2.11.2",
    "@tiptap/extension-link": "^2.10.4",
    "@tiptap/extension-list-keymap": "^2.11.1",
    "@tiptap/extension-mention": "^2.11.2",
    "@tiptap/extension-placeholder": "^2.1.11",
    "@tiptap/extension-table": "^2.12.0",
    "@tiptap/extension-table-cell": "^2.12.0",
    "@tiptap/extension-table-header": "^2.12.0",
    "@tiptap/extension-table-row": "^2.12.0",
    "@tiptap/extension-task-item": "^2.1.11",
    "@tiptap/extension-task-list": "^2.1.11",
    "@tiptap/extension-underline": "^2.11.7",
    "@tiptap/pm": "^2.1.11",
    "@tiptap/starter-kit": "^2.1.12",
    "@tiptap/suggestion": "^2.4.0",
    "@tsconfig/svelte": "^5.0.2",
    "dompurify": "^3.2.4",
    "rehype-highlight": "^7.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "sass": "^1.70.0",
    "svelte": "^5.38.1",
    "svelte-check": "^3.6.2",
    "svelte-exmarkdown": "^3.0.5",
    "svelte-tiptap": "^1.1.2",
    "tiptap-markdown": "^0.8.9",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^2.11.2",
