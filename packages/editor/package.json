{
  "name": "@deta/editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "svelte": "./src/lib/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/lib/index.ts",
      "import": "./dist/index.js"
    },
    "./editor": {
      "types": "./dist/editor.d.ts",
      "svelte": "./src/lib/editor.ts",
      "import": "./dist/editor.js"
    },
    "./extensions/CaretIndicator": {
      "types": "./dist/extensions/CaretIndicator/index.d.ts",
      "svelte": "./src/lib/extensions/CaretIndicator/index.ts",
      "import": "./dist/extensions/CaretIndicator/index.js"
    },
    "./extensions/Mention": {
      "types": "./dist/extensions/Mention/index.d.ts",
      "svelte": "./src/lib/extensions/Mention/index.ts",
      "import": "./dist/extensions/Mention/index.js"
    },
    "./extensions/Slash": {
      "types": "./dist/extensions/Slash/index.d.ts",
      "svelte": "./src/lib/extensions/Slash/index.ts",
      "import": "./dist/extensions/Slash/index.js"
    },
    "./extensions/Link": {
      "types": "./dist/extensions/Link/index.d.ts",
      "svelte": "./src/lib/extensions/Link/index.ts",
      "import": "./dist/extensions/Link/index.js"
    },
    "./src/lib": "./src/lib/index.ts",
    "./src/lib/*": "./src/lib/*",
    "./src/*": "./src/*",
    "./dist": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "svelte-package --watch",
    "build": "svelte-kit sync && svelte-package",
    "build:types": "tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "package": "svelte-package",
    "sync": "svelte-kit sync"
  },
  "devDependencies": {
    "@deta/icons": "*",
    "@deta/types": "*",
    "@deta/utils": "*",
    "@horizon/eslint-config": "*",
    "@horizon/typescript-config": "*",
    "@skilitics-public/two-fingers": "^2.1.0",
    "@sveltejs/kit": "^2.31.1",
    "@sveltejs/package": "^2.4.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.2",
    "@tiptap/extension-details": "^2.26.3",
    "@tiptap/extension-details-content": "^2.26.3",
    "@tiptap/extension-details-summary": "^2.26.3",
    "@tiptap/extension-mathematics": "^2.26.3",
    "@tiptap/extension-unique-id": "^2.26.3",
